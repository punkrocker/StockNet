@{
    ViewBag.Title = "添加角色";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("首页", "/Admin", "fa-dashboard"),
        new Crumb("角色管理","/Admin/Role","fa-users"),
        new Crumb("添加角色")
    });
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <form role="form" method="post" action="~/Admin/Role/Add">
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <label for="rolename">角色名：</label>
                        <input type="text" class="form-control" id="rolename" maxlength="45" name="rolename">
                    </div>
                    <div class="form-group">
                        <label>权限：</label>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Dash" />控制面板</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Member" />会员管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Stock" />库存管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Notice" />公告管理</label>
                        </div>                        
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="User" />用户管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Role" />角色管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Setting" />系统设置</label>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="reset" class="btn btn-default pull-left">重置</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>