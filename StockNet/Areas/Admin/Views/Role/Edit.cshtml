@model StockNet.Areas.Admin.Models.RoleEditViewModel
@{
    ViewBag.Title = "编辑角色";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("首页", "/Admin", "fa-dashboard"),
        new Crumb("角色管理","/Admin/Role","fa-users"),
        new Crumb("编辑角色")
    });
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <form role="form" method="post" action="~/Admin/Role/Edit/@Model.Role.Id">
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <label for="rolename">角色名：</label>
                        <input type="text" class="form-control" id="rolename" maxlength="45" name="rolename" value="@Model.Role.Name">
                    </div>
                    <div class="form-group">
                        <label>权限：</label>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Dash" @(("," + Model.Role.Perms + ",").IndexOf(",Dash,") > -1 ? "checked=\"checked\"" : "") />控制面板</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Member" @(("," + Model.Role.Perms + ",").IndexOf(",Member,") > -1 ? "checked=\"checked\"" : "") />会员管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Stock" @(("," + Model.Role.Perms + ",").IndexOf(",Stock,") > -1 ? "checked=\"checked\"" : "") />库存管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Notice" @(("," + Model.Role.Perms + ",").IndexOf(",Notice,") > -1 ? "checked=\"checked\"" : "") />公告管理</label>
                        </div>                        
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="User" @(("," + Model.Role.Perms + ",").IndexOf(",User,") > -1 ? "checked=\"checked\"" : "") />用户管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Role" @(("," + Model.Role.Perms + ",").IndexOf(",Role,") > -1 ? "checked=\"checked\"" : "") />角色管理</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" name="perms" value="Setting" @(("," + Model.Role.Perms + ",").IndexOf(",Setting,") > -1 ? "checked=\"checked\"" : "") />系统设置</label>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="reset" class="btn btn-default pull-left">重置</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>